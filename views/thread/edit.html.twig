{% extends "layout.twig" %}
{% block head %}

    {{ parent()}}
     <link href="assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css"/>
    <link href="assets/vendors/general/select2/dist/css/select2.css" rel="stylesheet" type="text/css"/>

{% endblock %}
{% block subheader%}
  <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">Edit Thread</h3>
            <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        </div>
        <div class="kt-subheader__toolbar">
            <a href="thread.php" class="btn btn-default btn-bold">
                Back </a>
      </div>
    </div>
    
{% endblock %}
{% block content %}


 
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            Edit Thread    
                        </h3>
                    </div>
                </div>


                <!--begin::Form-->
                <form class="kt-form kt-form--label-right" action="thread.php?action=update" id="threadForm" method="post" name="threadForm" enctype="multipart/form-data">
                        <input type="hidden" name="id" id="id" value="{{ thread.id??''}}">
                    <div class="kt-portlet__body">
                          
                         <div class="form-group row">
                            <div class="col-lg-6">
                                <label>Title: <i class="text-danger">*</i></label>
                                <input type="text" id="title" name="title" class="form-control" value="{{thread.title??''}}" placeholder="">
                            </div>
                        </div>
                         <div class="form-group row">
                            <div class="col-lg-6">
                            <label>Category: <i class="text-danger">*</i></label>
                            <select id="category_id" name="category_id" class="form-control  select">
                                <option value="">Select Category</option>
                                {% for category_val in category %}
                                <option value="{{ category_val['id'] }}"
                                {% if thread.category_id==category_val['id']%}
                                {{'selected'}}
                            {% endif %}>{{ category_val['name'] }}</option>


                         {% endfor %}
                            </select>
                             

                            </div>
                            
                        </div>
                         <div class="form-group row">
                            <div class="col-lg-6">
                    <label>Description: <i class="text-danger">*</i></label>
                        <textarea id="descripton" class="form-control" name="description">{{thread.description??''}}</textarea>
                        
                            </div>
                        </div>

                        
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <div class="row">
                                <div class="offset-6 col-lg-6">
                                    <div class="pull-right">
                                        <a class="btn btn-secondary" href="articles.php">Reset</a>
                                          <button type="submit" class="btn btn-success"><i class="ik ik-check-circle" id="cl"></i>Save</button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
       

    
{% endblock %}
