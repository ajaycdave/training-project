{% extends "layout.twig" %}
{% block head %}
    
	{{ parent()}}
	 <link href="assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css"/>
    <link href="assets/vendors/general/select2/dist/css/select2.css" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block subheader%}
  <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">
              Threads Listing Page 
            </h3>
            <span class="kt-subheader__separator kt-subheader__separator--v"></span>
            <div class="kt-subheader__group" id="kt_subheader_search">
			<span class="kt-subheader__desc" id="kt_subheader_total">
	         Total
            </span>
            </div>

        </div>
        <div class="kt-subheader__toolbar">
        
        </div>
       {#  <div class="kt-subheader__toolbar">
            <a href="index.php?action=add" class="btn btn-label-brand btn-bold">
                Add Sales Order </a>
        </div> #}
    </div>
    
{% endblock %}
{% block content %}

<div class="kt-portlet">
        <!--begin::Form-->

        <form class="kt-form kt-form--label-right">
            <div class="kt-portlet__body">
                <h3>Adavance Search:</h3>
                <div class="form-group row">
                    <div class="col-lg-3">
                        <label>Search:</label>
                        <input type="text" id="search_thread" name="search_thread" class="form-control" value="" placeholder="">
                    </div>
                    <div class="col-lg-3">
                        <label>Category:</label>
                    <select class="form-control" id="categoryID" name="categoryID" style="width: 100%!important;">
                            <option value="">Select Category</option>
                              {% for category_val in category %}
                                <option value="{{ category_val['id'] }}">{{ category_val['name'] }}</option>
                               {% endfor %} 
                        </select>
                    </div>
                    <div class="col-lg-1">
                        <label>&nbsp;</label>
                        <button type="button" id="btn_search" class="btn btn-primary mt-4">Apply</button>

                    </div>
                     <div class="col-lg-1">
                        <label>&nbsp;</label>
                        <button type="button" id="btn_clear" class="btn btn-primary mt-4">Reset</button>

                    </div>
                    
                </div>
            </div>
        </form>
        <!--end::Form-->
    </div>


  <div class="row">
        
        <div class="col-lg-12">
            <div class="kt-portlet kt-margin-top-30">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                             Threads List
                        </h3>
                    </div>
                </div>
                <!--begin::Form-->
                <form class="kt-form kt-form--label-right">
                    <div class="kt-portlet__body">
                        <!--begin: Datatable -->
                        <table class="table" id="threadDataTable" data-url="index.php?action=datalisting">
                            <thead class="thead-arrow-green">
                            <tr>
                              
                                <th width="25%">Title</th>
                                 <th width="60%">Description</th>
                                <th width="15%">Category Name</th>
                            
                            </tr>
                            </thead>
                            <tbody>
                        </tbody>

                        </table>
                        <!--end: Datatable -->
                    </div>

                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>

	
{% endblock %}
{% block jspush %}

